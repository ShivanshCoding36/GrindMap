{
  // Package metadata and configuration
  "name": "backend",
  "version": "1.0.0",
  "description": "GrindMap Backend - Competitive Programming Progress Tracker",
  "main": "src/server.js", // Entry point for the application
  
  // NPM scripts for development and production workflows
  "scripts": {
    // Production server start command
    "start": "node src/server.js",
    
    // Development server with auto-reload on file changes
    "dev": "nodemon src/server.js",
    
    // Testing commands using Jest framework
    "test": "jest", // Run all tests once
    "test:watch": "jest --watch", // Run tests in watch mode for development
    "test:coverage": "jest --coverage", // Generate test coverage reports
    
    // Code quality and linting commands
    "lint": "eslint src/**/*.js", // Check code for linting errors
    "lint:fix": "eslint src/**/*.js --fix", // Auto-fix linting errors where possible
    
    // Code formatting commands using Prettier
    "format": "prettier --write src/**/*.js", // Format all JavaScript files
    "format:check": "prettier --check src/**/*.js", // Check if files are formatted
    
    // Git hooks setup for pre-commit quality checks
    "prepare": "husky install", // Install git hooks when npm install runs
    
    // Security and dependency management
    "audit": "npm audit", // Check for security vulnerabilities
    "audit:fix": "npm audit fix", // Auto-fix security issues where possible
    
    // Build and deployment preparation
    "prebuild": "npm run lint && npm run test", // Run quality checks before build
    "build": "echo 'Build process - add your build steps here'", // Placeholder for build process
    
    // Development utilities
    "clean": "rm -rf node_modules package-lock.json && npm install", // Clean reinstall
    "dev:debug": "nodemon --inspect src/server.js" // Start with Node.js debugger
  },
  
  // Package keywords for npm registry discoverability
  "keywords": [
    "competitive-programming", 
    "leetcode", 
    "codeforces", 
    "progress-tracker", 
    "api", 
    "express", 
    "nodejs"
  ],
  
  // Package author and licensing information
  "author": "GrindMap Team",
  "license": "ISC",
  
  // ES6 modules support configuration
  "type": "module", // Enable ES6 import/export syntax
  
  // Production dependencies - required for application runtime
  "dependencies": {
    // HTTP client for making API requests to external services
    "axios": "^1.13.2", // For scraping platform data
    
    // Cross-Origin Resource Sharing middleware
    "cors": "^2.8.5", // Enable secure cross-origin requests
    
    // Environment variables management
    "dotenv": "^17.2.3", // Load configuration from .env files
    
    // Web application framework
    "express": "^5.2.1", // Core web server framework
    
    // Security and rate limiting middleware
    "express-rate-limit": "^7.5.1", // Prevent API abuse and DDoS attacks
    
    // Input validation and sanitization
    "express-validator": "^7.3.1", // Validate and sanitize user inputs
    
    // HTTP request logging middleware
    "morgan": "^1.10.1", // Log HTTP requests for monitoring
    
    // Cross-site scripting (XSS) protection
    "xss": "^1.0.15" // Sanitize user input to prevent XSS attacks
  },
  
  // Development dependencies - tools for development workflow
  "devDependencies": {
    // Development server with auto-reload functionality
    "nodemon": "^3.0.2", // Automatically restart server on file changes
    
    // Testing framework and utilities
    "jest": "^29.7.0", // JavaScript testing framework
    "supertest": "^6.3.3", // HTTP assertion library for testing APIs
    
    // Code quality and linting tools
    "eslint": "^8.56.0", // JavaScript linter for code quality
    "eslint-config-prettier": "^9.1.0", // Disable ESLint rules that conflict with Prettier
    "eslint-plugin-node": "^11.1.0", // ESLint rules for Node.js best practices
    
    // Code formatting tool
    "prettier": "^3.1.1", // Opinionated code formatter
    
    // Babel transpilation for testing (ES6 modules support)
    "@babel/preset-env": "^7.23.6", // Babel preset for environment-specific transpilation
    "babel-jest": "^29.7.0", // Babel integration with Jest
    
    // Git hooks and pre-commit quality checks
    "husky": "^8.0.3", // Git hooks made easy
    "lint-staged": "^15.2.0" // Run linters on staged files before commit
  },
  
  // Configuration for lint-staged (pre-commit hooks)
  "lint-staged": {
    // Run these commands on staged JavaScript files before commit
    "*.js": [
      "eslint --fix", // Auto-fix linting errors
      "prettier --write" // Format code according to Prettier rules
    ]
  },
  
  // Node.js engine compatibility specification
  "engines": {
    "node": ">=14.0.0", // Minimum Node.js version required
    "npm": ">=6.0.0" // Minimum npm version required
  },
  
  // Repository and bug tracking information
  "repository": {
    "type": "git",
    "url": "https://github.com/Yugenjr/GrindMap.git"
  },
  
  // Bug reporting and homepage links
  "bugs": {
    "url": "https://github.com/Yugenjr/GrindMap/issues"
  },
  "homepage": "https://github.com/Yugenjr/GrindMap#readme"
}
